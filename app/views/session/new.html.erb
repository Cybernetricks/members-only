<h1>Log in</h1>
<div>
  <div>
    <%= form_for(:session, url: login_path) do |form| %>
      
      <%= form.label :email %>
      <%= form.email_field :email %>

      <%= form.label :password %>
      <%= form.password_field :password %>

      <%= form.label :remember_me do %>
        <%= form.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= form.submit "Log in" %>

    <% end %>
  </div>
</div>